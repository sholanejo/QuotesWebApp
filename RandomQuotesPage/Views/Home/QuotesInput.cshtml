@model RandomQuotesPage.Models.QuotesModel


<!DOCTYPE html>
    <html>
    <head>
        <meta name=" viewport" content="width=device-width" />
        <title>Quote Input Form</title>
    </head>
    <body>
        <div>
            <h1>
                Please Fill the Form Below to Input Your Quote.
            </h1>
        </div>
        <div>
            <div asp-validation-summary="All" class="text-center"></div>
            <form asp-action="QuotesInput" method="post">
                <div class="form-group">
                    <label asp-for="QuoteAuthor">Quote Author:</label>
                    <input asp-for="QuoteAuthor" class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Quote">Quote:</label>
                    <input asp-for="Quote" class="form-control"/>
                </div>
                <button type="submit" class="btn btn-primary">SUBMIT INPUT</button>
            </form>
        </div>
        

    </body>
    </html>